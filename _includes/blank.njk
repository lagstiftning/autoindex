<!doctype html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="og:title" content="{{ title }}" />
    {% if description %}
      <meta name="og:description" content="{{ description }}" />
    {% endif %}
    <link rel="stylesheet" href="/tailwind.css" />
    <title>{{ title }}</title>
  </head>

  <body class="flex flex-col items-center mb-[128px]">
    {% include "header.njk" %}
    {% include "breadcrumbs.njk" %}
    <main class="flex flex-col px-4 lg:px-0 max-w-5xl w-full">
      {{ content | safe }}
    </main>
  </body>
</html>
